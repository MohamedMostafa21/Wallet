@model IEnumerable<Digital_Wallet.Models.Transaction>

<div class="row mb-3">
    <div class="col-md-12">
        <ejs-button id="createOrEditTransaction" type="button" cssClass="e-primary" content="New Transaction" onclick="window.location.href='@Url.Action("CreateOrEdit", "Transaction")'"></ejs-button>
    </div>
</div>

<div class="row">
    <div class="col-md-12 position-relative">
        <ejs-grid id="transactions" datasource="@Model" gridlines="None" allowSorting="true" allowPaging="true">
            <e-grid-pagesettings pageSize="5"></e-grid-pagesettings>
            <e-grid-columns>
                <e-grid-column headerText="Category" field="Category.TitleWithIcon"></e-grid-column>
                <e-grid-column headerText="Amount" field="Amount" format="C2"></e-grid-column>
                <e-grid-column headerText="Note" field="Note"></e-grid-column>
                <e-grid-column headerText="Date" field="Date" format="dd-MM-yyyy HH:mm"></e-grid-column>
                <e-grid-column headerText="Actions" template="#ActionTemplate" width="100px"></e-grid-column>
            </e-grid-columns>
        </ejs-grid>

        <!-- Transparent Money Icon Background -->
        <div class="background-icon">
            <i class="fa-solid fa-money-bill-transfer"></i>
        </div>
    </div>
</div>

<script id="ActionTemplate" type="text/x-template">
    <div class="d-flex flex-row justify-content-start">
        <a class="btn btn-sm no-a-decoration" href="CreateOrEdit/${TransactionId}">
            <i class="fa-solid fa-pen fa-lg"></i>
        </a>
        <form action="Delete/${TransactionId}" method="post">
    @Html.AntiForgeryToken()
            <button type="submit" class="btn btn-sm btn-link no-a-decoration" onclick="return confirm('Are you sure you want to delete this transaction?')">
                <i class="fa-solid fa-trash-can fa-lg text-danger"></i>
            </button>
        </form>
    </div>
</script>

<style>
    .background-icon {
        position: absolute;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        font-size: 200px;
        color: rgba(0, 0, 0, 0.1); /* Adjust the transparency */
        z-index: -1; /* Make sure it is behind other content */
    }
</style>
