@model Digital_Wallet.Models.Account

@{
    ViewData["Title"] = "Login";
}

<style>
    body {
        background-color: #212b36;
        color: #ffffff;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    .login-container {
        min-height: 100vh;
        display: flex;
        justify-content: center;
        align-items: center;
    }

    .login-box {
        background-color: #2c3e50;
        padding: 40px;
        border-radius: 10px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.5);
        width: 400px; /* Adjust the width to make the widget larger */
    }

        .login-box h1 {
            margin-bottom: 30px;
            font-size: 2rem;
            text-align: center;
        }

        .login-box .form-group {
            margin-bottom: 20px;
        }

        .login-box .form-control {
            background-color: #34495e;
            border: none;
            color: #ffffff;
        }

            .login-box .form-control:focus {
                background-color: #3b5998;
                color: #ffffff;
            }

        .login-box .btn-primary {
            background-color: #2980b9;
            border: none;
            width: 100%;
            padding: 12px; /* Increase the padding for a larger button */
            font-size: 1.1rem;
            border-radius: 5px;
            transition: background-color 0.3s;
        }

            .login-box .btn-primary:hover {
                background-color: #3498db;
            }

    .text-danger {
        color: #e74c3c !important;
    }
</style>

<div class="login-container">
    <div class="login-box">
        <h1>Login</h1>
        <form asp-controller="Access" asp-action="Login" method="post">
            <div asp-validation-summary="All" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Password" class="control-label"></label>
                <input asp-for="Password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <label>
                <input type = "checkbox" asp-for ="KeepLoggedIn" />
                Keep me Logged In.
            </label>

            <button type="submit" class="btn btn-primary">Login</button>
            @if (ViewData["ValidateMessage"] != null)
            {
                <br />
                <br />
                <label>
                    @ViewData["ValidateMessage"]</label>
            }
        </form>
    </div>
</div>
